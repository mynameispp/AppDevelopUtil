<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_lay"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_transparent55_radius_5"
    android:gravity="center"
    android:padding="@dimen/size_dp_8"
    android:orientation="vertical"
    >

    <ProgressBar
        android:id="@+id/loading_pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/size_dp_60"
        android:layout_height="@dimen/size_dp_60"
        android:indeterminateTint="@color/colorPrimary"
        android:indeterminateTintMode="src_atop"/>

    <TextView
        android:id="@+id/loading_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_dp_8"
        android:text="正在加载中..."
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_sp_16" />
</LinearLayout>