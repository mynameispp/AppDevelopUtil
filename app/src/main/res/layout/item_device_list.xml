<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginTop="@dimen/size_dp_1"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/item_device_list_image"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_device_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@id/item_device_list_image"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/item_device_list_image"
        android:text="设备名称"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_device_list_mac_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_device_list_name"
        android:layout_alignLeft="@id/item_device_list_name"
        android:layout_marginTop="10dp"
        android:text="MAC : "
        android:textColor="#FF9B99A9"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_device_list_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_device_list_mac_title"
        android:layout_alignTop="@id/item_device_list_mac_title"
        android:layout_marginTop="3dp"
        android:text="MAC"
        android:textColor="#FF9B99A9"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_device_list_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_device_list_mac_title"
        android:layout_alignLeft="@id/item_device_list_mac_title"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:text="连接状态"
        android:textColor="#FF9B99A9"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/item_device_list_electricity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_device_list_status"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_device_list_status"
        android:tint="@color/colorPrimary" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_right_arrow" />
</RelativeLayout>