<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_voice_record_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_voice_record_play_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_gray_white_radius_5"
        android:gravity="center_vertical"
        android:padding="@dimen/size_dp_10"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/item_voice_record_image"
        app:layout_constraintLeft_toRightOf="@id/item_voice_record_image"
        app:layout_constraintTop_toTopOf="@id/item_voice_record_image" />
    <ImageView
        android:id="@+id/item_voice_record_play_anima"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/voice_play_anima_white_yellow_4"
        app:layout_constraintBottom_toBottomOf="@id/item_voice_record_image"
        app:layout_constraintLeft_toRightOf="@id/item_voice_record_play_txt"
        app:layout_constraintTop_toTopOf="@id/item_voice_record_image" />
</androidx.constraintlayout.widget.ConstraintLayout>