<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/item_download_over_info_check_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_download_over_info_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/icon_edit_video_check_not"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_download_over_info_image"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/item_download_over_info_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignLeft="@id/item_download_over_info_check_layout"
        android:layout_alignRight="@id/item_download_over_info_check_layout"
        android:layout_alignBottom="@id/item_download_over_info_check_layout"
        android:max="100"
        android:progress="0"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_download_over_info_last_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/item_download_over_info_check_layout"
        android:layout_alignBottom="@id/item_download_over_info_check_layout"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:background="#5a010101"
        android:padding="2dp"
        android:text="00:00/01:00"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_download_over_info_videos_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/item_download_over_info_check_layout"
        android:layout_alignBottom="@id/item_download_over_info_check_layout"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:background="#5a010101"
        android:drawableLeft="@mipmap/icon_video_count"
        android:gravity="center"
        android:padding="2dp"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/item_download_over_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_download_over_info_check_layout"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/item_download_over_info_check_layout"
        android:maxLines="1"
        android:textColor="@color/black"
        android:text="视频名称" />

    <TextView
        android:id="@+id/item_download_over_info_subject_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_download_over_info_name"
        android:layout_alignLeft="@id/item_download_over_info_name"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:text="" />

    <TextView
        android:id="@+id/item_download_over_info_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_download_over_info_name"
        android:layout_alignBottom="@id/item_download_over_info_check_layout"
        android:layout_toRightOf="@id/item_download_over_info_check_layout"
        android:text="大小"
        android:textColor="@color/black"
        android:textSize="12sp" />

</RelativeLayout>